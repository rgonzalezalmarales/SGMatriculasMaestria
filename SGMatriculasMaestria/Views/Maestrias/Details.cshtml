@model SGMatriculasMaestria.Models.Maestria

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- general form elements disabled -->
    <center>
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Detalles de la Maestría</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <table id="example1" class="table table-bordered table-striped">
                            <tbody>
                                <tr>
                                    <th>Nombre</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Titulo)</td>
                                </tr>
                                <tr>
                                    <th>Versión</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Version)</td>
                                </tr>
                                <tr>
                                    <th>Facultad</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Facultad.Nombre)</td>
                                </tr>
                                <tr>
                                    <th>Fecha de creación</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Creatat)</td>
                                </tr>
                                <tr>
                                    <th>Última modificación</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Modifiat)</td>
                                </tr>
                            </tbody>

                        </table>

                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </div>
            </div>
        </div>
    </center>
    <div class="col-xl-3 col-md-6 mb-4"></div>
    <div>
        @if (User.IsInRole(SGMatriculasMaestria.Enums.Roles.Tecnico.ToString()) == false)
        {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></a><span>&nbsp; &nbsp; &nbsp;</span>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info margin-left">Editar</a><span>&nbsp; &nbsp; &nbsp;</span>
        }
        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Regresar al listado</span>
        </a>
    </div> <!-- /.card-body -->
</div>

