@model IEnumerable<SGMatriculasMaestria.Models.Facultad>

@{
    ViewData["Title"] = "Facultades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-normal">Listado de Facultades</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="tablefacu" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            @if (User.IsInRole(SGMatriculasMaestria.Enums.Roles.Tecnico.ToString()) == false)
                            {
                                <th></th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            @if (User.IsInRole(SGMatriculasMaestria.Enums.Roles.Tecnico.ToString()) == false)
                            {
                                <td class="tb-accion">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-circle btn-sm">
                                        <i class="fas fa-fw fa-wrench"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-circle btn-sm">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-circle btn-sm">
                                        <i class="fas fa-trash">
                                        </i>
                                    </a>
                                </td>
                            }
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div>
        <p>
            <a asp-action="Create" class="btn btn-info btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus-circle"></i>
                </span>
                <span class="text">Agregar Facultad</span>
            </a>
        </p>
    </div>
</div>
@section scripts
{
    <script>
        $(function () {
            $('#tablefacu').DataTable({
                "order": [[2, 'asc']],
                'paging': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'scrollX': true,
                'scrollY': true,
                'autoWidth': true
            });
        })
    </script>
}
