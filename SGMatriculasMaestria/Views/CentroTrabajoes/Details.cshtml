@model SGMatriculasMaestria.Models.CentroTrabajo

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- general form elements disabled -->
    <center>
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Detalles del Centro de Trabajo</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <table id="example1" class="table table-bordered table-striped">
                            <tbody>
                                <tr>
                                    <th>Nombre</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Nombre)</td>
                                </tr>
                                <tr>
                                    <th>Departamento</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Departamento)</td>
                                </tr>
                                <tr>
                                    <th>Direccion</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Direccion)</td>
                                </tr>
                                <tr>
                                    <th>Provincia</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Provincia.Nombre)</td>
                                </tr>
                                <tr>
                                    <th>Municipio</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Municipio.Nombre)</td>
                                </tr>
                                <tr>
                                    <th>Fecha de creación</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Creatat)</td>
                                </tr>
                                <tr>
                                    <th>Última modificación</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Modifiat)</td>
                                </tr>
                            </tbody>

                        </table>

                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </div>
            </div>
        </div>
    </center>
    <div class="col-xl-3 col-md-6 mb-4"></div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info margin-left">Editar</a>&nbsp;&nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Regresar al listado</span>
        </a>
    </div> <!-- /.card-body -->
</div>

