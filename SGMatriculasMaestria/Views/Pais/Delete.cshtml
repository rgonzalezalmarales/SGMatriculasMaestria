@model SGMatriculasMaestria.Models.Pais

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Estás seguro de eliminar el pais?</h3>
<div>
    <hr />
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="text-danger text-center">
            <h5>@ViewBag.ErrorMessage</h5>
        </div>
        <hr />
    }
    <div>
        <!-- class="alert-danger"-->
        <table id="example1" class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Nombre</th>
                </tr>
                <tr>
                    <td> @Html.DisplayFor(modelItem => modelItem.Nombre)</td>
                </tr>
            </tbody>

        </table>
    </div>
    <form asp-action="Delete" hidden="@ViewBag.hidden">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />&nbsp;&nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Regresar al listado</span>
        </a>
    </form>
</div>
