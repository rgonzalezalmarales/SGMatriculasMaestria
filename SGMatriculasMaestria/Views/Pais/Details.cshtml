@model SGMatriculasMaestria.Models.Pais

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <!-- general form elements disabled -->
    <center>
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Detalles del Pais</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <table id="example1" class="table table-bordered table-striped">
                            <tbody>
                                <tr>
                                    <th>Nombre</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Nombre)</td>
                                </tr>
                                <tr>
                                    <th>Fecha de creación</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Creatat)</td>
                                </tr>
                                <tr>
                                    <th>Última modificación</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.Modifiat)</td>
                                </tr>
                            </tbody>

                        </table>

                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </div>
                <div class="col-xl-3 col-md-6 mb-4"></div>
                <div>
                    @if (User.IsInRole(SGMatriculasMaestria.Enums.Roles.Tecnico.ToString()) == false)
                    {
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mr-2"><i class="fas fa-trash mr-2"></i>Eliminar</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success mr-2"><i class="fas fa-fw fa-wrench mr-2"></i>Editar</a>
                    }
                    <a asp-action="Index" class="btn btn-secondary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                        <span class="text">Regresar al listado</span>
                    </a>
                </div>
            </div>
        </div>
    </center>
    <!-- /.card-body -->
</div>
         