@model IEnumerable<SGMatriculasMaestria.Models.Aspirante>

@{
    ViewData["Title"] = "Aspirantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="content-fluet">
    <div class="row">
        <div class="col-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-normal">Gráfica de aspirantes por sexo</h6>
                </div>
                <div class="card-body">
                    <canvas id="myChart" width="400" height="400"></canvas>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-normal">Gráfica de aspirantes porprovincia</h6>
                </div>
                <div class="card-body">
                    <canvas id="provincia-chart" width="400" height="400"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-normal">Gráfica de aspirantes por municios</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form>
                                <div class="form-group">
                                    <label class="control-label">Provincia</label>
                                    <select asp-items="@(new SelectList(ViewBag.Provincias,"Id","Nombre"))" id="provincia-select" class="form-control">
                                        <option value="">-- Seleccione una provincia --</option>
                                    </select>
                                </div>                                
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <canvas id="municipios-chart" width="800" height="400"></canvas>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</div>


















@section scripts
{
    <script src="~/lib/chart.js-3.6.0/package/dist/chart.js"></script>
    <script src="~/js/chartjs-reports/Graficas.js"></script>

}
