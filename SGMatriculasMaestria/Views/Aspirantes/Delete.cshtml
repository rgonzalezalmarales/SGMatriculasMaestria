@model SGMatriculasMaestria.Models.Aspirante

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h3 class="text-center">Estás seguro de eliminar?</h3>
    <div>
        <hr />
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="text-danger text-center">
                <h5>@ViewBag.ErrorMessage</h5>
            </div>
            <hr />
        }

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrimerApellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrimerApellido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DireccionParticular)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DireccionParticular)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaGraduacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaGraduacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tomo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tomo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Folio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Folio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Numero)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Numero)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sexo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sexo)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CI" />
            <input type="submit" value="Eliminar" class="btn btn-danger" hidden="@ViewBag.hidden" />&nbsp;&nbsp;&nbsp;
            <a asp-action="Index" class="btn btn-secondary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-arrow-left"></i>
                </span>
                <span class="text">Regresar al listado</span>
            </a>
        </form>
    </div>
</div>
