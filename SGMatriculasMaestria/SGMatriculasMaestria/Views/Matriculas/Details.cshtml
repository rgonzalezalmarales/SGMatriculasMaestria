@model SGMatriculasMaestria.Models.Matricula

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- general form elements disabled -->
    <center>
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Detalles de la Matrícula</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <table id="example1" class="table table-bordered table-striped">
                            <tbody>
                                <tr>
                                    <th>Fecha de Inicio</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.FechaInicio)</td>
                                </tr>
                                <tr>
                                    <th>Fecha de Culminación</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.FechaCulminacion)</td>
                                </tr>
                                <tr>
                                    <th>Centro de Trabajo</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.CentroTrabajo.Nombre)</td>
                                </tr>
                                <tr>
                                    <th>Motivo de la Solicitud</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.MotivoSolicitud)</td>
                                </tr>
                                <tr>
                                    <th>Secretario de Post-Grado</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.SecretarioPostg.Nombre)</td>
                                </tr>
                                <tr>
                                    <th>Años de Experiencia Laboral</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.AnnoExperienciaLaboral)</td>
                                </tr>
                                <tr>
                                    <th>Categoría Docente</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.CategDocente.Nombre)</td>
                                </tr>
                                <tr>
                                    <th>Fecha de Matrícula</th>
                                </tr>
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => Model.FechaMatricula)</td>
                                </tr>
                            </tbody>

                        </table>

                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </div>
            </div>
        </div>
    </center>
    <div class="col-xl-3 col-md-6 mb-4"></div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info margin-left">Editar</a>&nbsp;&nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Regresar al listado</span>
        </a>
    </div> <!-- /.card-body -->
</div>


